# Maple Blog 开发环境配置
# 开发环境专用配置，可以提交到版本控制

# ===========================================
# 数据库配置 - 开发环境
# ===========================================

# 使用SQLite作为开发数据库
DATABASE_PROVIDER=SQLite
DATABASE_CONNECTION_SQLITE=Data Source=data/blog_dev.db

# ===========================================
# JWT认证配置 - 开发环境
# ===========================================

# 开发环境JWT配置(生产环境需要更强的密钥)
JWT_SECRET_KEY=maple-blog-development-secret-key-256-bits-long
JWT_ISSUER=MapleBlog.Dev
JWT_AUDIENCE=MapleBlog.Dev.Users
JWT_EXPIRES_IN_HOURS=24

# ===========================================
# Redis缓存配置 - 开发环境
# ===========================================

# 开发环境可以禁用Redis缓存或使用本地Redis
REDIS_CONNECTION_STRING=localhost:6379
REDIS_PASSWORD=
CACHE_EXPIRATION_MINUTES=5

# ===========================================
# 文件存储配置 - 开发环境
# ===========================================

FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ===========================================
# 日志配置 - 开发环境
# ===========================================

LOG_LEVEL=Debug
LOG_FILE_PATH=logs/
# 开发环境禁用Elasticsearch
ELASTICSEARCH_URI=

# ===========================================
# API配置 - 开发环境
# ===========================================

API_BASE_URL=http://localhost:5000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# ===========================================
# 安全配置 - 开发环境
# ===========================================

FORCE_HTTPS=false
PASSWORD_HASH_ROUNDS=4
SESSION_TIMEOUT_MINUTES=60

# ===========================================
# 开发配置
# ===========================================

ASPNETCORE_ENVIRONMENT=Development
DETAILED_ERRORS=true
DEVELOPER_EXCEPTION_PAGE=true

# ===========================================
# 邮件服务配置 - 开发环境
# ===========================================

# 开发环境可以使用假邮件服务或禁用邮件
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=test@localhost
SMTP_PASSWORD=test
FROM_EMAIL=dev@maple-blog.local

# ===========================================
# 外部服务配置 - 开发环境
# ===========================================

# 开发环境禁用外部存储服务
QINIU_ACCESS_KEY=
QINIU_SECRET_KEY=
QINIU_BUCKET=
QINIU_DOMAIN=

ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET=
ALIYUN_OSS_ENDPOINT=

# ===========================================
# AI功能配置 - 开发环境
# ===========================================

# 开发环境可以使用测试密钥或禁用AI功能
OPENAI_API_KEY=
AZURE_COGNITIVE_SERVICES_KEY=

# ===========================================
# 监控配置 - 开发环境
# ===========================================

# 开发环境禁用监控服务
APPLICATIONINSIGHTS_CONNECTION_STRING=
SENTRY_DSN=

# ===========================================
# CDN配置 - 开发环境
# ===========================================

# 开发环境使用本地静态资源
CDN_DOMAIN=
STATIC_ASSETS_BASE_URL=http://localhost:3000/assets