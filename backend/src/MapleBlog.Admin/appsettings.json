{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=../../../data/mapleblog.db",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-for-admin-api-min-256-bits",
    "Issuer": "MapleBlog.Admin",
    "Audience": "MapleBlog.Admin.Users",
    "ExpiryInMinutes": 60,
    "RefreshTokenExpiryInDays": 7
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "https://admin.mapleblog.com"
  ],
  "AdminSecurity": {
    "AllowedIpRanges": [
      "127.0.0.1",
      "::1"
    ],
    "MaxRequestsPerMinute": 60,
    "RequireHttps": false,
    "SessionTimeoutMinutes": 30
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/admin-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId"],
    "Properties": {
      "Application": "MapleBlog.Admin"
    }
  },
  "CacheSettings": {
    "DefaultExpiration": "00:15:00",
    "SlidingExpiration": "00:05:00",
    "AbsoluteExpirationRelativeToNow": "01:00:00"
  },
  "AuditSettings": {
    "RetentionDays": 365,
    "BatchSize": 1000,
    "EnableRealTimeNotifications": true
  },
  "MonitoringSettings": {
    "HealthCheckIntervalSeconds": 30,
    "MetricsCollectionIntervalSeconds": 60,
    "AlertThresholds": {
      "CpuUsagePercent": 80,
      "MemoryUsagePercent": 85,
      "DiskUsagePercent": 90,
      "ResponseTimeMs": 2000
    }
  },
  "AdminDatabaseHealth": {
    "ConnectionTimeoutThresholdMs": 5000,
    "SlowQueryThresholdMs": 2000,
    "IndexScanThresholdMs": 1000,
    "TableScanThresholdMs": 1500,
    "TransactionTimeoutMs": 3000,
    "HighActivityThreshold": 100,
    "EnableDetailedLogging": true,
    "CacheResultsForSeconds": 30
  },
  "AdminDatabaseMonitoring": {
    "CollectionIntervalSeconds": 60,
    "MetricsRetentionHours": 24,
    "SlowQueryThresholdMs": 2000,
    "ConnectionTimeoutAlertMs": 5000,
    "AverageResponseTimeAlertMs": 3000,
    "SlowQueryCountAlert": 3,
    "DatabaseSizeAlertBytes": 1073741824,
    "EnableAlerts": true
  },
  "AdminDatabasePrometheus": {
    "UpdateIntervalSeconds": 30,
    "HealthyResponseTimeThresholdMs": 2000,
    "HealthySlowQueryThreshold": 2,
    "EnableDetailedMetrics": true,
    "MetricPrefix": "maple_blog_admin_db"
  },
  "AdminConnectionPool": {
    "MonitoringIntervalSeconds": 120,
    "SnapshotRetentionHours": 12,
    "ConcurrentConnectionsToTest": 5,
    "ConnectionTimeoutTestSeconds": 10,
    "BurstConnectionCount": 10,
    "SustainedLoadTestDurationSeconds": 30,
    "AcceptableConnectionTimeMs": 1000,
    "AlertConnectionOpenTimeMs": 2000
  },
  "AdminQueryPerformance": {
    "TestIntervalSeconds": 300,
    "AnalysisIntervalSeconds": 600,
    "AnalysisWindowMinutes": 60,
    "RecordRetentionHours": 24,
    "BasicQueryThresholdMs": 500,
    "IndexedQueryThresholdMs": 1000,
    "ComplexQueryThresholdMs": 2000,
    "AggregationQueryThresholdMs": 3000,
    "PaginationQueryThresholdMs": 1500,
    "SearchQueryThresholdMs": 5000,
    "RegressionThresholdMultiplier": 1.5,
    "SlowQueryRateThreshold": 0.1,
    "MinSuccessRate": 0.95
  },
  "AdminDatabaseResource": {
    "MonitoringIntervalSeconds": 180,
    "SnapshotRetentionHours": 48,
    "DatabaseSizeAlertBytes": 2147483648,
    "DiskUsageAlertPercentage": 85.0,
    "MemoryUsageAlertMB": 512.0,
    "QueryPerformanceAlertMs": 2000
  },
  "SystemMonitor": {
    "MonitoringIntervalSeconds": 60,
    "CacheExpirationMinutes": 5,
    "CpuWarningThreshold": 80.0,
    "CpuErrorThreshold": 95.0,
    "MemoryWarningThreshold": 80.0,
    "MemoryErrorThreshold": 95.0,
    "DiskWarningThreshold": 80.0,
    "DiskErrorThreshold": 95.0,
    "DatabaseResponseWarningMs": 1000.0,
    "DatabaseResponseErrorMs": 5000.0,
    "EnableAutoAlerting": true,
    "AlertEmailRecipients": [
      "admin@mapleblog.com"
    ]
  },
  "ExternalServices": {
    "PublicAPI": {
      "Name": "Public API",
      "Url": "http://localhost:5000/health"
    },
    "Database": {
      "Name": "Database Health",
      "Url": "http://localhost:5000/health/database"
    }
  }
}