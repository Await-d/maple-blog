{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=maple_blog;Username=postgres;Password=${POSTGRES_PASSWORD}",
    "Redis": "redis:6379"
  },
  "DatabaseProvider": "PostgreSQL",
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpiryInHours": 24,
    "RefreshTokenExpiryInDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "${FRONTEND_URL}",
      "https://yourdomain.com"
    ]
  },
  "FileUpload": {
    "MaxFileSizeInMB": 10,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg", ".pdf", ".doc", ".docx" ],
    "UploadPath": "wwwroot/uploads"
  },
  "Elasticsearch": {
    "Uri": "http://elasticsearch:9200",
    "DefaultIndex": "maple-blog",
    "Username": "${ELASTICSEARCH_USERNAME}",
    "Password": "${ELASTICSEARCH_PASSWORD}"
  },
  "Email": {
    "SmtpServer": "${SMTP_HOST}",
    "SmtpPort": "${SMTP_PORT}",
    "SenderEmail": "${SENDER_EMAIL}",
    "SenderName": "${SENDER_NAME}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "EnableSsl": true
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "SlidingExpirationMinutes": 30
  },
  "Redis": {
    "InstanceName": "MapleBlog-Prod",
    "HealthCheck": {
      "ResponseTimeThresholdMs": 2000,
      "EnableDetailedChecks": false,
      "TimeoutMs": 10000
    },
    "Monitoring": {
      "HealthCheckIntervalSeconds": 60,
      "MetricsCollectionIntervalSeconds": 300,
      "ResponseTimeWarningThresholdMs": 2000
    }
  },
  "ContentModeration": {
    "EnableAIModeration": true,
    "AutoApproveThreshold": 0.8,
    "AutoRejectThreshold": 0.3,
    "MaxContentLength": 10000
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 10,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "maple-blog-logs-{0:yyyy.MM.dd}",
          "typeName": "_doc",
          "batchPostingLimit": 50,
          "period": "00:00:02",
          "inlineFields": true,
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName" ],
    "Properties": {
      "Application": "MapleBlog.API",
      "Environment": "Production"
    }
  },
  "HealthChecks": {
    "Timeout": "00:00:15",
    "Period": "00:01:00",
    "Enabled": true,
    "DetailedErrors": false,
    "Tags": {
      "Database": [ "db", "ready" ],
      "Redis": [ "redis", "ready", "cache" ],
      "Self": [ "live" ]
    },
    "UI": {
      "ApiPath": "/health",
      "UIPath": "/health-ui",
      "MaximumHistoryEntriesPerEndpoint": 50
    }
  },
  "Metrics": {
    "Enabled": true,
    "PrometheusEnabled": true,
    "CollectionInterval": "00:00:30"
  },
  "Security": {
    "RequireHttpsMetadata": true,
    "ForceHttps": true,
    "EnableCorsCredentials": true,
    "MaxRequestBodySize": 10485760
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "DefaultCacheDurationSeconds": 300
  }
}