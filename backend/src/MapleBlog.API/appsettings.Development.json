{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "MapleBlog.Infrastructure.Services.RedisHealthCheckService": "Debug",
      "MapleBlog.Infrastructure.Services.RedisMonitoringService": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data/maple-blog.db",
    "Redis": "localhost:6379"
  },
  "DatabaseProvider": "SQLite",
  "Redis": {
    "InstanceName": "MapleBlog-Dev",
    "HealthCheck": {
      "ResponseTimeThresholdMs": 500,
      "EnableDetailedChecks": true,
      "TimeoutMs": 3000
    },
    "Monitoring": {
      "HealthCheckIntervalSeconds": 15,
      "MetricsCollectionIntervalSeconds": 30,
      "ResponseTimeWarningThresholdMs": 500
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "MapleBlog.Infrastructure.Services.RedisHealthCheckService": "Debug",
        "MapleBlog.Infrastructure.Services.RedisMonitoringService": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "SeedData": {
    "Enabled": true
  }
}
