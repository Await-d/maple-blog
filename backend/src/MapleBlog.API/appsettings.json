{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data/maple-blog.db",
    "Redis": ""
  },
  "DatabaseProvider": "SQLite",
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-for-security",
    "Issuer": "MapleBlog",
    "Audience": "MapleBlogUsers",
    "ExpiryInHours": 24,
    "RefreshTokenExpiryInDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:5173",
      "https://localhost:5173"
    ]
  },
  "FileUpload": {
    "MaxFileSizeInMB": 10,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg", ".pdf", ".doc", ".docx" ],
    "UploadPath": "wwwroot/uploads"
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200",
    "DefaultIndex": "maple-blog",
    "Username": "",
    "Password": ""
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@mapleblog.com",
    "SenderName": "Maple Blog",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "SlidingExpirationMinutes": 30,
    "ProviderType": "Memory",
    "Enabled": true
  },
  "ResponseCache": {
    "Global": {
      "Enabled": true,
      "DefaultDuration": "00:05:00",
      "MaxCacheSize": 104857600,
      "EnableETag": true,
      "EnableLastModified": true,
      "EnableVaryHeader": true,
      "DefaultVaryHeaders": ["Accept", "Accept-Encoding", "Accept-Language"],
      "EnableCompression": true,
      "Provider": "Memory"
    },
    "StaticContent": {
      "Enabled": true,
      "ImageCacheDuration": "30.00:00:00",
      "StyleScriptCacheDuration": "7.00:00:00",
      "FontCacheDuration": "365.00:00:00",
      "DefaultStaticCacheDuration": "1.00:00:00"
    },
    "Api": {
      "DefaultDuration": "00:05:00",
      "PostsCacheDuration": "00:15:00",
      "CategoriesCacheDuration": "01:00:00",
      "TagsCacheDuration": "00:30:00",
      "UserProfilesCacheDuration": "00:10:00",
      "StatsCacheDuration": "00:05:00",
      "SearchCacheDuration": "00:15:00",
      "NoCachePaths": [
        "/api/auth/*",
        "/api/admin/*",
        "/api/comments/*/like",
        "/api/posts/*/views",
        "/api/user/profile",
        "/api/notification*"
      ],
      "CacheAuthenticatedRequests": false,
      "IncludeAuthInCacheKey": true
    },
    "Invalidation": {
      "Enabled": true,
      "PostInvalidationPatterns": [
        "posts:*",
        "post:*",
        "categories:*",
        "tags:*",
        "stats:*",
        "homepage:*"
      ],
      "CategoryInvalidationPatterns": [
        "categories:*",
        "category:*",
        "posts:*"
      ],
      "TagInvalidationPatterns": [
        "tags:*",
        "tag:*",
        "posts:*"
      ],
      "EnableCacheWarming": true,
      "CacheWarmingDelay": "00:00:10"
    }
  },
  "Redis": {
    "InstanceName": "MapleBlog",
    "HealthCheck": {
      "ResponseTimeThresholdMs": 1000,
      "EnableDetailedChecks": true,
      "TimeoutMs": 5000
    },
    "Monitoring": {
      "Enabled": true,
      "HealthCheckIntervalSeconds": 30,
      "MetricsCollectionIntervalSeconds": 60,
      "ResponseTimeWarningThresholdMs": 1000
    },
    "Prometheus": {
      "Enabled": true,
      "MetricsCollectionIntervalSeconds": 30,
      "HealthCheckIntervalSeconds": 15,
      "ResponseTimeThresholdMs": 1000,
      "EnableDetailedMetrics": true,
      "MetricLabelPrefix": "maple_blog"
    }
  },
  "ContentModeration": {
    "EnableAIModeration": true,
    "AutoApproveThreshold": 0.8,
    "AutoRejectThreshold": 0.3,
    "MaxContentLength": 10000
  },
  "HealthChecks": {
    "Timeout": "00:00:10",
    "Period": "00:00:30",
    "Enabled": true,
    "DetailedErrors": false,
    "Tags": {
      "Database": [ "db", "ready" ],
      "Redis": [ "redis", "ready", "cache" ],
      "Self": [ "live" ]
    }
  },
  "Metrics": {
    "Enabled": false,
    "PrometheusEnabled": false,
    "CollectionInterval": "00:00:15"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 10,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}