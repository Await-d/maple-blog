# Maple Blog 环境变量配置模板
# 复制此文件为 .env 并填入真实的配置值

# ===========================================
# 数据库配置
# ===========================================

# 数据库提供程序 (SQLite, PostgreSQL, SqlServer, MySQL, Oracle)
DATABASE_PROVIDER=SQLite

# SQLite 连接字符串 (开发环境默认)
DATABASE_CONNECTION_SQLITE=Data Source=data/blog.db

# PostgreSQL 连接字符串 (生产环境推荐)
DATABASE_CONNECTION_POSTGRESQL=Host=localhost;Database=maple_blog;Username=postgres;Password=your_password

# SQL Server 连接字符串
DATABASE_CONNECTION_SQLSERVER=Server=localhost;Database=MapleBlog;Trusted_Connection=true

# MySQL 连接字符串
DATABASE_CONNECTION_MYSQL=Server=localhost;Database=maple_blog;Uid=root;Pwd=your_password

# ===========================================
# JWT认证配置
# ===========================================

# JWT密钥 (生产环境请使用复杂的随机字符串)
JWT_SECRET_KEY=your-super-secret-jwt-key-here-at-least-256-bits

# JWT发行者
JWT_ISSUER=MapleBlog

# JWT受众
JWT_AUDIENCE=MapleBlog.Users

# JWT过期时间(小时)
JWT_EXPIRES_IN_HOURS=24

# ===========================================
# Redis缓存配置
# ===========================================

# Redis连接字符串
REDIS_CONNECTION_STRING=localhost:6379

# Redis密码
REDIS_PASSWORD=

# 缓存过期时间(分钟)
CACHE_EXPIRATION_MINUTES=10

# ===========================================
# 文件存储配置
# ===========================================

# 文件上传路径
FILE_UPLOAD_PATH=./uploads

# 最大文件大小(MB)
MAX_FILE_SIZE_MB=10

# 允许的文件类型
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ===========================================
# 邮件服务配置
# ===========================================

# SMTP服务器
SMTP_HOST=smtp.gmail.com

# SMTP端口
SMTP_PORT=587

# SMTP用户名
SMTP_USERNAME=your-email@gmail.com

# SMTP密码
SMTP_PASSWORD=your-app-password

# 发件人邮箱
FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# 外部服务配置
# ===========================================

# 七牛云存储
QINIU_ACCESS_KEY=your-qiniu-access-key
QINIU_SECRET_KEY=your-qiniu-secret-key
QINIU_BUCKET=your-qiniu-bucket
QINIU_DOMAIN=your-qiniu-domain

# 阿里云OSS
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_OSS_BUCKET=your-aliyun-oss-bucket
ALIYUN_OSS_ENDPOINT=your-aliyun-oss-endpoint

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (Debug, Information, Warning, Error)
LOG_LEVEL=Information

# 日志文件路径
LOG_FILE_PATH=logs/

# Elasticsearch日志配置
ELASTICSEARCH_URI=http://localhost:9200

# ===========================================
# API配置
# ===========================================

# API基础URL
API_BASE_URL=http://localhost:5000

# 跨域允许的源
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# API限流配置
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ===========================================
# 安全配置
# ===========================================

# 是否启用HTTPS重定向
FORCE_HTTPS=false

# 密码加密盐轮数
PASSWORD_HASH_ROUNDS=12

# 会话过期时间(分钟)
SESSION_TIMEOUT_MINUTES=30

# ===========================================
# 开发配置
# ===========================================

# 开发环境(Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# 是否启用详细错误信息
DETAILED_ERRORS=true

# 是否启用开发者异常页面
DEVELOPER_EXCEPTION_PAGE=true

# ===========================================
# AI功能配置 (未来扩展)
# ===========================================

# OpenAI API密钥
OPENAI_API_KEY=your-openai-api-key

# Azure Cognitive Services密钥
AZURE_COGNITIVE_SERVICES_KEY=your-azure-cognitive-services-key

# ===========================================
# 监控配置
# ===========================================

# Application Insights连接字符串
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Sentry DSN
SENTRY_DSN=your-sentry-dsn

# ===========================================
# CDN配置
# ===========================================

# CDN域名
CDN_DOMAIN=your-cdn-domain.com

# 静态资源基础URL
STATIC_ASSETS_BASE_URL=https://your-cdn-domain.com/assets