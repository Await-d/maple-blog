# Maple Blog Frontend 生产环境配置
# 生产环境专用配置

# ===========================================
# API配置
# ===========================================

# API基础URL (生产环境)
VITE_API_BASE_URL=/api

# GraphQL端点 (如果使用)
VITE_GRAPHQL_ENDPOINT=/graphql

# WebSocket地址 (SignalR)
VITE_WEBSOCKET_URL=/hubs

# ===========================================
# 环境配置
# ===========================================

# 环境标识
VITE_APP_ENV=production

# 应用名称
VITE_APP_NAME=Maple Blog

# 应用版本
VITE_APP_VERSION=1.0.0

# 是否显示调试信息
VITE_DEBUG_MODE=false

# ===========================================
# CDN和静态资源配置
# ===========================================

# CDN基础URL
VITE_CDN_BASE_URL=https://cdn.yourdomain.com

# 静态资源基础URL
VITE_STATIC_ASSETS_URL=https://cdn.yourdomain.com/assets

# 图片上传/显示地址
VITE_IMAGE_BASE_URL=/uploads

# ===========================================
# 第三方服务配置
# ===========================================

# Google Analytics ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google AdSense客户端ID
VITE_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxx

# 百度统计ID
VITE_BAIDU_ANALYTICS_ID=xxxxxxxxxxxxxxxx

# 微软Clarity项目ID
VITE_CLARITY_PROJECT_ID=xxxxxxxx

# ===========================================
# SEO配置
# ===========================================

# 网站标题
VITE_SITE_TITLE=Maple Blog - 现代化博客平台

# 网站描述
VITE_SITE_DESCRIPTION=基于React 19和.NET 10的现代化博客平台，支持多媒体内容、智能搜索和实时评论。

# 网站关键词
VITE_SITE_KEYWORDS=博客,技术分享,编程,开发,React,NET,现代化

# 网站作者
VITE_SITE_AUTHOR=Maple Blog Team

# 网站URL
VITE_SITE_URL=https://yourdomain.com

# 默认OG图片
VITE_DEFAULT_OG_IMAGE=https://yourdomain.com/og-default.jpg

# ===========================================
# 社交媒体配置
# ===========================================

# Twitter Card类型
VITE_TWITTER_CARD_TYPE=summary_large_image

# Twitter站点账号
VITE_TWITTER_SITE=@yourblog

# Twitter创建者账号
VITE_TWITTER_CREATOR=@yourcreator

# Facebook App ID
VITE_FACEBOOK_APP_ID=xxxxxxxxxxxxxxxxx

# ===========================================
# 功能开关配置
# ===========================================

# 是否启用暗色主题
VITE_ENABLE_DARK_MODE=true

# 是否启用评论功能
VITE_ENABLE_COMMENTS=true

# 是否启用搜索功能
VITE_ENABLE_SEARCH=true

# 是否启用推荐系统
VITE_ENABLE_RECOMMENDATIONS=true

# 是否启用社交分享
VITE_ENABLE_SOCIAL_SHARING=true

# 是否启用用户注册
VITE_ENABLE_USER_REGISTRATION=true

# 是否启用RSS订阅
VITE_ENABLE_RSS=true

# ===========================================
# 性能配置
# ===========================================

# 是否启用Service Worker
VITE_ENABLE_SERVICE_WORKER=true

# 分页大小
VITE_DEFAULT_PAGE_SIZE=10

# 搜索防抖延迟(毫秒)
VITE_SEARCH_DEBOUNCE_DELAY=300

# 图片懒加载边距(像素)
VITE_IMAGE_LAZY_LOAD_MARGIN=100

# ===========================================
# 错误监控配置
# ===========================================

# Sentry DSN (前端错误监控)
VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# 错误采样率
VITE_SENTRY_SAMPLE_RATE=0.1

# 性能监控采样率
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# PWA配置
# ===========================================

# 是否启用PWA
VITE_ENABLE_PWA=true

# PWA离线页面
VITE_PWA_OFFLINE_PAGE=/offline

# PWA缓存策略
VITE_PWA_CACHE_STRATEGY=NetworkFirst

# ===========================================
# 安全配置
# ===========================================

# 内容安全策略报告端点
VITE_CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# 是否启用严格的CSP
VITE_ENABLE_STRICT_CSP=true

# HSTS最大年龄(秒)
VITE_HSTS_MAX_AGE=31536000